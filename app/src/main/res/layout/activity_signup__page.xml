<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_gradient"
    tools:context="com.example.user.project101.Signup_Page">

    <RelativeLayout
        android:paddingBottom="90dp"
        android:paddingTop="50dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:id="@+id/RLa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRegister"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imvBacktoLogin"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColorHint="#FFA1D3F9"
            android:textColor="@color/colorHome"

            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="20dp"
            android:background="@drawable/edittextdesign_for_signup"
            android:layout_height="50dp"
            android:id="@+id/etxtName"
            android:hint="Name"

            android:layout_above="@+id/etxtUserName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColorHint="#FFA1D3F9"
            android:textColor="@color/colorHome"
            android:layout_marginTop="10dp"

            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="20dp"
            android:background="@drawable/edittextdesign_for_signup"
            android:layout_height="50dp"

            android:layout_width="match_parent"
            android:id="@+id/etxtUserName"
            android:hint="Username"
            android:layout_above="@+id/etxtPassword"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColorHint="#FFA1D3F9"
            android:textColor="@color/colorHome"
            android:layout_marginTop="10dp"

            android:password="true"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="20dp"
            android:background="@drawable/edittextdesign_for_signup"
            android:layout_height="50dp"
            android:id="@+id/etxtPassword"
            android:hint="Password"
            android:layout_above="@+id/etxtRePassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColorHint="#FFA1D3F9"
            android:textColor="@color/colorHome"
            android:layout_marginTop="10dp"
            android:password="true"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="20dp"
            android:background="@drawable/edittextdesign_for_signup"
            android:layout_height="50dp"
            android:id="@+id/etxtRePassword"
            android:hint="Re-Type Password"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Create Account"
            android:textSize="40dp"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="Please fill the input fields below"
            android:id="@+id/textView8" />

        <ImageView
            android:layout_marginTop="73dp"
            android:src="@drawable/userr"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:id="@+id/imageView3"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>





    <Button
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="Signup"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:background="@drawable/buttondesignforsignup"
        android:id="@+id/btnRegister"
        android:textColor="#ffffff"
        android:contextClickable="false"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_marginBottom="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout2">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Have an Account?"
            android:textSize="15dp"

            />

        <TextView
            android:clickable="true"
            android:id="@+id/txtSigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00d0ff"
            android:textColorLink="#ffffff"
            android:layout_toRightOf="@+id/txt1"
            android:layout_toEndOf="@+id/txt1"
            android:layout_marginLeft="10dp"
            android:text="Signin"
            android:textStyle="bold"
            android:textSize="17dp"
            />


    </RelativeLayout>

</RelativeLayout>
