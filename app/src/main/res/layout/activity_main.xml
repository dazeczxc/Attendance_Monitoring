<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/signup_gradient"
    android:layout_height="match_parent"
    tools:context="com.example.user.project101.MainActivity">

    <RelativeLayout
        android:paddingTop="100dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/buttonLogin"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:src="@drawable/loginimagedesign"
            android:id="@+id/imvbupclogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_width="265dp"
            android:layout_height="270dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:textStyle="bold"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/relativeLayout3"
            android:layout_alignStart="@+id/relativeLayout3" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please sign in to continue"

            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/textView33"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <RelativeLayout
            android:layout_margin="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout3">

            <EditText
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editTextUserName"
                android:hint="Username"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColorHint="#FFA1D3F9"
                android:textColor="@color/colorHome"

                android:background="@drawable/edittextdesign"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/editTextUserName"
                android:background="@drawable/edittextdesign"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:background="@drawable/edittextdesign2"
                    android:password="true"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="20dp"
                    android:layout_width="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:id="@+id/editTextPassword"
                    android:hint="Password"
                    android:textColorHint="#FFA1D3F9"
                    android:textColor="@color/colorHome"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                     />

                <ImageView
                    android:onClick="ShowHidePassword"
                    android:layout_marginRight="20dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/iconEye"
                    android:src="@drawable/ic_eye_close"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Login"
        android:textSize="16sp"
        android:background="@drawable/buttondesignforsignup"
        android:id="@+id/buttonLogin"
        android:textColor="#ffffff"
        android:contextClickable="false"
        android:layout_above="@+id/RLLLL"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

<RelativeLayout
    android:id="@+id/RLLLL"
    android:layout_marginBottom="100dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true">


    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont Have an Account?"
        android:textSize="15dp"

        />

    <TextView
        android:id="@+id/txtSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00d0ff"
        android:textColorLink="#000000"
        android:clickable="true"
        android:layout_toRightOf="@+id/txt1"
        android:layout_toEndOf="@+id/txt1"
        android:layout_marginLeft="10dp"
        android:text="Signup"
        android:textStyle="bold"
        android:textSize="17dp"
        />


</RelativeLayout>



</RelativeLayout>
